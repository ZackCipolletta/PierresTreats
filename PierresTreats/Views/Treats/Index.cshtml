@{
  Layout = "_Layout";
}

@using PierresTreats.Models;


<h1 class="text-center">Treats</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
}
<ul>
  @if (User.Identity.IsAuthenticated)
    {
      @foreach (Treat treat in Model)
      {
        <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId }) @Html.ActionLink("Delete", "Delete", new { id = treat.TreatId })<br>
        &emsp; -@Html.DisplayFor(model => treat.Description)</li>
      }
    }
    else
    {
      @foreach (Treat treat in Model)
      {
      <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
      }
    }
</ul>
<br>

<hr class="my-2">
  @if (User.Identity.IsAuthenticated)
    {
      <p class="nav">@Html.ActionLink("Add new treat", "Create")</p>
    }
<p class="nav">@Html.ActionLink("Home", "Index", "Home")</p>
