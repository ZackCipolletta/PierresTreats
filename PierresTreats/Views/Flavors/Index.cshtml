@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<h1 class="text-center">Flavors</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
}
<ul>
@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.Name} Treats", "Details", new { id = flavor.FlavorId }) @Html.ActionLink("Edit", "Edit", "Flavors", new { id = flavor.FlavorId }) @Html.ActionLink("Delete Flavor", "Delete", "Flavors", new { id = flavor.FlavorId })</li>
}
</ul>
<br>

<hr class="my-2">
<p class="nav">@Html.ActionLink("Add new flavor", "Create")</p>
<p class="nav">@Html.ActionLink("Home", "Index", "Home")</p>
